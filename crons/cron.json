{
  "apps": [
    {
      "name": "Scrape Liveuamap-ALL",
      "script": "urlcrawler.js",
      "args": [
        "--name=Liveuamap",
        "--url=https://liveuamap.com/"
      ],
      "node_args": "--harmony",
      "merge_logs": true,
      "instances": 1,
      "exec_mode": "fork",
      "cron_restart": "*/5 * * * *",
      "watch": false,
      "autorestart": false,
      "cwd": "../urlscrapper/",
      "env": {
        "NODE_ENV": "production"
      }
    },
    {
      "name": "Scrape BBC NEWS-UK",
      "script": "urlcrawler.js",
