        "--name=BBC NEWS",
        "--url=https://www.bbc.co.uk/news"
      ],
      "node_args": "--harmony",
      "merge_logs": true,
      "instances": 1,
      "exec_mode": "fork",
      "cron_restart": "*/5 * * * *",
      "watch": false,
      "autorestart": false,
      "cwd": "../urlscrapper/",
      "env": {
        "NODE_ENV": "production"
      }
    },
    {
      "name": "Scrape Sky News-UK",
